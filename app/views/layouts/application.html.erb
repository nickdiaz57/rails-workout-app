<!DOCTYPE html>
<html>
  <head>
    <title>RailsWorkoutApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- partial/nav bar/logout button -->
  <!-- success/error messages
  if alert or success is present in flash hash, present them here -->
    
    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% elsif flash[:success] %>
      <%= flash[:success] %>
    <% end %>

    <%= yield %>
  </body>
</html>
