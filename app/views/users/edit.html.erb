<h2>Edit Your Profile</h2>

<!-- form to edit user information -->

<%= form_for(@user) do |f| %>
    Username: <%= f.text_field :name %><br>
    Email: <%= f.text_field :email %><br>
    Password: <%= f.password_field :password %><br>
    Password Confirmation: <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Submit" %>
  <% end %>

  <%= link_to 'Delete Profile', @user, method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' } %>