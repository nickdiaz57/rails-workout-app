<% if @user.first_name %>
    <h1>Welcome, <%= @user.first_name %>.</h1>
<% else %>
    <h1>Welcome.</h1>
<% end %>

<h3>Your Upcoming Workouts</h3>
<ul>
<% @reservations.each do |r| %>
    <li>
    <%= link_to r.workout.title, user_workout_path(@user, r.workout) %> - <%= r.workout.format_date %><br>
    <%= link_to "Change Reservation", edit_user_reservation_path(r.user, r) %><br>
    <%= link_to 'Cancel Reservation', r, method: :delete, data: { confirm: 'Cancel your reservation?' } %><br><br>
    </li>
<% end %>
</ul>
<br><br>
<%= link_to "All Workouts", workouts_path %><br>
<%= link_to "Post a Workout", new_user_workout_path(@user) %><br>
<%= link_to "Workout History", user_reservations_path(@user) %><br>
<%= link_to "Reserve a Workout", new_user_reservation_path(@user) %><br>
<%= link_to "Edit Profile", edit_user_path(@user) %>